{
    "name": "mastering-nextjs",
    "description": "The complete video course on Next.js.",
    "version": "0.0.0",
    "author": {
        "name": "Lee Robinson",
        "email": "me@leerob.io",
        "url": "https://leerob.io"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leerob/mastering-nextjs.git"
    },
    "scripts": {
        "build": "next build",
        "dev": "next",
        "imageoptim": "yarn imageoptim:gif && yarn imageoptim:jpg && yarn imageoptim:png",
        "imageoptim:gif": "imageoptim \"static/**/*.gif\"",
        "imageoptim:jpg": "imageoptim \"static/**/*.jpg\"",
        "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"static/**/*.png\"",
        "lint": "eslint . --ext .json --ext .js",
        "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
        "start": "next start",
        "test": "yarn lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{html,js,json,md,mdx,mjs,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.gif": [
            "imageoptim",
            "git add"
        ],
        "*.jpg": [
            "imageoptim",
            "git add"
        ],
        "*.png": [
            "imageoptim --no-imageoptim --imagealpha",
            "git add"
        ]
    },
    "dependencies": {
        "@mapbox/rehype-prism": "0.3.1",
        "@mdx-js/mdx": "1.5.3",
        "@mdx-js/tag": "0.20.3",
        "comma-number": "2.0.1",
        "date-fns": "1.30.1",
        "framer-motion": "1.7.0",
        "globby": "^11.0.0",
        "isomorphic-unfetch": "3.0.0",
        "next": "9.1.7",
        "next-ga": "2.3.4",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-intersection-observer": "8.25.2",
        "react-syntax-highlighter": "11.0.1",
        "styled-components": "4.4.1",
        "styled-reset": "4.0.9",
        "title": "3.4.1"
    },
    "devDependencies": {
        "@babel/core": "^7.7.7",
        "@zeit/next-css": "1.0.1",
        "@zeit/next-mdx": "1.2.0",
        "babel-plugin-inline-react-svg": "1.1.0",
        "babel-plugin-styled-components": "1.10.6",
        "eslint": "6.8.0",
        "eslint-config-get-off-my-lawn": "^5.0.1",
        "execa": "2.0.3",
        "husky": "3.0.0",
        "imageoptim-cli": "3.0.2",
        "lint-staged": "9.5.0",
        "prettier": "1.19.1"
    }
}
